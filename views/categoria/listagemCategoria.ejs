<!DOCTYPE html>

<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TESTE LISTAGEM</title>

</head>

<body>
   
    
 <!-- <h1>TESTE DE LISTAGEM</h1> -->
 <div class="container"> 
    <%- include('../partials/menu.ejs') %>
    <div class="card">
        <div class="card-header">LISTAGEM DE CATEGORIAS</div>
    </div>

    <%
        categorias.data.forEach(categoria=>{
    %>
        
        <div class="card mt-2 p-1">
            <div class="card-body">
                <%= categoria.nome_categoria %>

            </div>
             <div class="btn-group mr-2">
                <a href="/editarCategoria/<%=categoria.cod_categoria%>"class="btn btn-success btn-sm mr-2 ml-2">EDITAR</a>
                <a href="#"class="btn btn-danger btn-sm mr-2 ml-2">EXCLUIR</a>
             </div>
        </div>
<%}) %>
 </div>

</body>

<%- include('../partials/footer.ejs') %>

</html>